generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  password String
  name     String
  cart     CartItem[]
}

model Item {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  price       Float
  category    String
  imageUrl    String
  cart        CartItem[] // âœ… fixes the relation
}

model CartItem {
  id       Int @id @default(autoincrement())
  userId   Int
  itemId   Int
  quantity Int @default(1)

  user User @relation(fields: [userId], references: [id])
  item Item @relation(fields: [itemId], references: [id])

  @@unique([userId, itemId])
}
